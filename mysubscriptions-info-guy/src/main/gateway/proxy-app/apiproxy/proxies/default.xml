<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
       #as_auth_template_faultRules#
    <DefaultFaultRule name="default-fault">
        <Step>
            <Name>Default-message</Name>
        </Step>
    </DefaultFaultRule>
    <PreFlow name="PreFlow" />
    <Flows>
        <Flow name="OptionsPreFlight">
            <Description/>
            <Request/>
            <Response>
            	#cors_headers_response#
            </Response>
            <Condition>request.verb == "OPTIONS"</Condition>
        </Flow>
        <Flow name="AuthZFlow">
	        <Request>
	            #as_auth_template_request#
	        </Request>
	        <Response>
		    <Step>
			<Name>dme2metadata</Name>
		    </Step>
		    <Step>
		         <Name>dme2GRMEdgeCall</Name>
		    </Step>
	            #cors_headers_response#
	            #as_auth_template_response#
	        </Response>
            <Condition>request.verb != "OPTIONS"</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow" />
    <PostClientFlow name="PostClientFlow">
    <Response>
        <Step>
            <Name>transactionIDLogging</Name>
        </Step>
    </Response>
    </PostClientFlow>
    <HTTPProxyConnection>
        <BasePath>@proxy.basepath@</BasePath>
        <VirtualHost>@proxy.mngr.host@</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="NoRoute">
        <Condition>request.verb == "OPTIONS"</Condition>
    </RouteRule>
    <RouteRule name="noroute"/>
</ProxyEndpoint>
